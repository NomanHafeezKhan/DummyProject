
@{
    ViewBag.Title = "particle";
}
<style>
    body {
        margin: 0;
        padding: 0;
    }

    #particles-js {
        background-color: firebrick;
        height: 70vh;
        width: 100%;
        margin-top: 55px;
    }

    h2 {
        text-align: center;
        color: Highlight;
    }

    h3 {
        animation: anim 02s infinite;
    }

    .glitch {
        position: relative;
        width: 100%;
        height: 70vh;
        background: url(/myimages/architecture-boats-buildings-1306699.jpg);
        background-size: cover;
    }

        .glitch:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url(/myimages/architecture-boats-buildings-1306699.jpg);
            background-size: cover;
            opacity: 0.5;
            /*mix-blend-mode:hard-light;*/
        }

            .glitch:before:hover {
                animation: anim 02s infinite;
            }

    @@keyframes anim {
        0% {
            background-position: 0 0;
            filter: hue-rotate(0deg);
        }

        10% {
            background-position: 4px 0;
        }

        20% {
            background-position: -4px 0;
        }

        30% {
            background-position: 12px 0;
        }

        40% {
            background-position: -16px 0;
        }

        50% {
            background-position: -24px 0;
        }

        60% {
            background-position: -52px 0;
        }

        70% {
            background-position: 0 22px;
        }

        80% {
            background-position: -40px -10px;
        }

        100% {
            background-position: 0 0;
            filter: hue-rotate(360deg);
        }
    }
</style>

